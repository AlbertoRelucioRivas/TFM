<?xml version="1.0"?>
<launch>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->

  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="model" default="$(find jaguar_description)/urdf/model.urdf"/>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find jaguar_gazebo)/worlds/simple.world"/>
    <!-- more default parameters can be changed here -->
    <arg name="extra_gazebo_args" value="--gui-client-plugin /home/alberto/code/gazebo/build/plugins/libKeyboardGUIPlugin.so"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-file $(find jaguar_description)/urdf/model.urdf -urdf -z 1 -model robot" />

  <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

   <rosparam command="load"
            file="$(find jaguar_gazebo)/config/joints.yaml"
            ns="jaguar_joint_state_controller" />
   <rosparam command="load"
            file="$(find jaguar_gazebo)/config/jaguar__left_front_track.yaml"
            ns="jaguar__left_front_track_state_controller" />
   <rosparam command="load"
            file="$(find jaguar_gazebo)/config/jaguar__left_rear_track.yaml"
            ns="jaguar__left_rear_track_state_controller" />
   <rosparam command="load"
            file="$(find jaguar_gazebo)/config/jaguar__right_front_track.yaml"
            ns="jaguar__right_front_track_state_controller" />
   <rosparam command="load"
            file="$(find jaguar_gazebo)/config/jaguar__right_rear_track.yaml"
            ns="jaguar__right_rear_track_state_controller" />

   <node name="jaguar_controller_spawner" pkg="controller_manager" type="spawner"
    args="jaguar_joint_state_controller
          jaguar__left_front_track_state_controller
          jaguar__left_rear_track_state_controller
          jaguar__right_front_track_state_controller
          jaguar__right_rear_track_state_controller
          --shutdown-timeout 3"/>

</launch>